        android:id="@+id/textView_cistern5" style="@style/MyMainTextStyle"
        android:text="Цистерна 5"
        app:layout_column="4">
    </TextView>
    <TextView
        android:id="@+id/textView_cistern6" style="@style/MyMainTextStyle"
        android:text="Цистерна 6"
        app:layout_column="4">
    </TextView>
    <TextView
        android:id="@+id/textView_cistern7" style="@style/MyMainTextStyle"
        android:text="Цистерна 7"
        app:layout_column="4">
    </TextView>
    <TextView
        android:id="@+id/textView_differenceRealRemainingAndOfficial" style="@style/MyMainTextStyle"
        android:text="@string/differenceRealRemainingAndOfficial"
        app:layout_column="4">
    </TextView>

    <!--Вторая колонка-->
    <EditText
        android:id="@+id/edit_text_cistern1"
        app:layout_column="5"
        app:layout_row="0"
        style="@style/MySecondaryTextStyleEditText">
    </EditText>
    <EditText
        android:id="@+id/edit_text_cistern2"
        app:layout_column="5"
        app:layout_row="1"
        style="@style/MySecondaryTextStyleEditText">
    </EditText>
    <EditText
        android:id="@+id/edit_text_cistern3"
        app:layout_column="5"
        app:layout_row="2"
        style="@style/MySecondaryTextStyleEditText">
    </EditText>
