        android:id="@+id/textView_cistern1" style="@style/MyMainTextStyle"
        android:text="@string/cistern1"
        app:layout_column="4"
        app:layout_row="0">
    </TextView>

    <TextView
        android:id="@+id/textView_cistern2" style="@style/MyMainTextStyle"
        android:text="Цистерна 2 "
