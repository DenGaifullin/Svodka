        android:id="@+id/textView_weightOfDayConsumption" style="@style/MyMainTextStyle"
        android:text="Резерв"
        app:layout_column="2">
    </TextView>
    <TextView
        android:id="@+id/textView_Spare1" style="@style/MyMainTextStyle"
        android:text="Резерв"
        app:layout_column="2">
    </TextView>
    <TextView
        android:id="@+id/textView_Spare2" style="@style/MyMainTextStyle"
        android:text="Резерв"
        app:layout_column="2">
    </TextView>
    <TextView
        android:id="@+id/textView_Spare3" style="@style/MyMainTextStyle"
        android:text="Резерв"
        app:layout_column="2">
    </TextView>
    <TextView
        android:id="@+id/textView_Spare4" style="@style/MyMainTextStyle"
        android:text="Резерв"
        app:layout_column="2">
    </TextView>

    <!--Вторая колонка-->
    <EditText
        android:id="@+id/editText_allKWT_ofEnergyComplex"
        app:layout_column="3"
        app:layout_row="0"
        style="@style/MySecondaryTextStyleEditText">
    </EditText>
    <EditText
        android:id="@+id/edit_text_allEngineRunHoursOfComplex"
        app:layout_column="3"
        app:layout_row="1"
        style="@style/MySecondaryTextStyleEditText">
    </EditText>
    <EditText
        android:id="@+id/edit_text_spare11"
        app:layout_column="3"
        app:layout_row="2"
        style="@style/MySecondaryTextStyleEditText">
    </EditText>
    <EditText
        android:id="@+id/edit_text__weightOfDayConsumption"
        app:layout_column="3"
        app:layout_row="3"
        style="@style/MySecondaryTextStyle">
    </EditText>
    <EditText
        android:id="@+id/edit_text__Spare1"
        app:layout_column="3"
        app:layout_row="4"
        style="@style/MySecondaryTextStyle">
    </EditText>
    <EditText
        android:id="@+id/edit_text__Spare2"
        app:layout_column="3"
        app:layout_row="5"
        style="@style/MySecondaryTextStyleEditText">
    </EditText>
    <EditText
        android:id="@+id/edit_text__Spare3"
        app:layout_column="3"
        app:layout_row="6"
        style="@style/MySecondaryTextStyleEditText">
