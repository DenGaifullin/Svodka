<?xml version="1.0" encoding="utf-8"?>


<androidx.gridlayout.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="50dp"
    app:columnCount="4"
    app:rowCount="8"
    tools:context=".MainActivity"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:id="@+id/textView_remainingFuel" style="@style/MyMainTextStyle"
        android:text="Остаток Д.Т."
        app:layout_column="0"
        app:layout_row="0">
    </TextView>

    <TextView
        android:id="@+id/textView_remainingOil" style="@style/MyMainTextStyle"
        android:text="Остаток Д.М."
        app:layout_column="0">
    </TextView>
    <TextView
        android:id="@+id/textView_fuelCounter" style="@style/MyMainTextStyle"
        android:text="Топл Счетчик"
        app:layout_column="0">
    </TextView>
    <TextView
        android:id="@+id/textView_activeEnDrilling" style="@style/MyMainTextStyle"
        android:text="Актив Буровой"
        app:layout_column="0">
    </TextView>
    <TextView
        android:id="@+id/textView_reactiveEnDrilling" style="@style/MyMainTextStyle"
        android:text="Реакт Буровой"
        app:layout_column="0">
    </TextView>
    <TextView
        android:id="@+id/textView_activeSpare" style="@style/MyMainTextStyle"
        android:text="Актив Запас"
        app:layout_column="0">
    </TextView>
    <TextView
        android:id="@+id/textView_reactiveSpare" style="@style/MyMainTextStyle"
        android:text="Реактив Запас"
        app:layout_column="0">
    </TextView>
    <TextView
        android:id="@+id/textView_spacer" style="@style/MyMainTextStyle"
        android:text="Запас"
        app:layout_column="0">
    </TextView>

    <!--Вторая колонка-->
    <EditText
        android:id="@+id/edit_text_remainingFuel"
        app:layout_column="1"
        app:layout_row="0"
        style="@style/MySecondaryTextStyleEditText">
    </EditText>
    <EditText
        android:id="@+id/edit_text_remainingOil"
        app:layout_column="1"
        app:layout_row="1"
        style="@style/MySecondaryTextStyleEditText">
    </EditText>
    <EditText
        android:id="@+id/edit_text_fuelCounter"
        app:layout_column="1"
        app:layout_row="2"
        style="@style/MySecondaryTextStyleEditText">
    </EditText>
    <EditText
        android:id="@+id/edit_text_activeEnDrilling"
        app:layout_column="1"
        app:layout_row="3"
        style="@style/MySecondaryTextStyle">
    </EditText>
    <EditText
        android:id="@+id/edit_text_reactiveEnDrilling"
        app:layout_column="1"
        app:layout_row="4"
        style="@style/MySecondaryTextStyle">
    </EditText>
    <EditText
        android:id="@+id/edit_text_activeSpare"
        app:layout_column="1"
        app:layout_row="5"
        style="@style/MySecondaryTextStyleEditText">
    </EditText>
    <EditText
        android:id="@+id/edit_text_reactiveSpare"
        app:layout_column="1"
        app:layout_row="6"
        style="@style/MySecondaryTextStyleEditText">
    </EditText>
    <EditText
        android:id="@+id/edit_text_spacer"
        app:layout_column="1"
        app:layout_row="7"
        style="@style/MySecondaryTextStyleEditText">
    </EditText>

    <!--Третья колонка -->
    <TextView
        android:id="@+id/textView_DGU_coefficient_transformation" style="@style/MyMainTextStyle"
        app:layout_column="2"
        app:layout_row="0"
        android:text="Кофф.транс.ДГУ"
        >
    </TextView>

    <TextView
        android:id="@+id/textView_drillers_coefficient_transformation" style="@style/MyMainTextStyle"
        app:layout_column="2"
        app:layout_row="1"
        android:text="Кофф.транс.Буров"
        >
    </TextView>
    <TextView
        android:id="@+id/textView_InKWT" style="@style/MyMainTextStyle"
        android:text="Буровая В КВТ"
        app:layout_column="2"
        app:layout_row="2"
        >
    </TextView>
    <TextView
        android:id="@+id/textView_activeEnDrillingTransformIn_KWT" style="@style/MySecondaryTextStyle"
        app:layout_column="2"
        app:layout_row="3"
        >
    </TextView>
    <TextView
        android:id="@+id/textView_reactiveEnDrillingTransformIn_KWT" style="@style/MySecondaryTextStyle"
        app:layout_column="2"
        app:layout_row="4">
    </TextView>
    <TextView
        android:id="@+id/textView_activeEnDrillingTransformIn_KWTSpare" style="@style/MySecondaryTextStyleEditText"
        app:layout_column="2"
        app:layout_row="5">
    </TextView>
    <TextView
        android:id="@+id/textView_reactiveEnDrillingTransformIn_KWTSpare" style="@style/MySecondaryTextStyleEditText"
        app:layout_column="2"
        app:layout_row="6">
    </TextView>
    <TextView
        android:id="@+id/textView_spacerColumn1" style="@style/MySecondaryTextStyleEditText"
        app:layout_row="7"
        app:layout_column="2">
    </TextView>

    <!--Четвертая колонка-->
    <EditText
        android:id="@+id/edit_text_DGU_coefficient_transformation_field"
        app:layout_column="3"
        app:layout_row="0"
        style="@style/MySecondaryTextStyleEditText">
    </EditText>
    <EditText
        android:id="@+id/edit_text_driller_coefficient_transformation_field"
        app:layout_column="3"
        app:layout_row="1"
        style="@style/MySecondaryTextStyleEditText">
    </EditText>
    <TextView
        app:layout_column="3"
        app:layout_row="2"
        android:text="Разница в КВТ"
        style="@style/MyMainTextStyle">
        <!--android:id="@+id/edit_text_fuelCounter"-->
    </TextView>
    <EditText
        android:id="@+id/edit_text_active_difference_DGU_and_Driller"
        app:layout_column="3"
        app:layout_row="3"
        style="@style/MySecondaryTextStyle">
    </EditText>
    <EditText
        android:id="@+id/edit_text_reactive_difference_DGU_and_Driller"
        app:layout_column="3"
        app:layout_row="4"
        style="@style/MySecondaryTextStyle">
    </EditText>
    <EditText
        android:id="@+id/edit_text_active_difference_DGU_and_DrillerSpare"
        app:layout_column="3"
        app:layout_row="5"
        style="@style/MySecondaryTextStyleEditText">
    </EditText>
    <EditText
        android:id="@+id/edit_text_reactive_difference_DGU_and_DrillerSpare"
        app:layout_column="3"
        app:layout_row="6"
        style="@style/MySecondaryTextStyleEditText">
    </EditText>
    <EditText
        android:id="@+id/edit_text_spacer4"
        app:layout_column="3"
        app:layout_row="7"
        style="@style/MySecondaryTextStyleEditText">
    </EditText>
</androidx.gridlayout.widget.GridLayout>